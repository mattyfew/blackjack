<% include top.ejs %>

	<div id="container">

		<div id="container-inner" class="row">
			<div class="small-12 columns">
				<!--  NAV row   -->
				<div class="row">
					<div class="contain-to-grid sticky small-12 columns">

						<!--    NAVIGATION BAR   -->
						<nav class="top-bar" role=>
							<ul class="title-area">
								<li class="name">
									<h1><a href="#">TSRH</a></h1>
								</li>
								<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
							</ul>
							<section class="top-bar-section">
								<!-- Left Nav Section -->
								<ul class="left">
									<li><a href="#">Popular Topics</a></li>
									<li class="divider"></li>
									<li class="has-form"><a class="button alert" href="/tsrh/new">Submit New</a></li>
								</ul>

								<!-- Right Nav Section -->
								<ul class="right">
									<li><a href="#">User Info(2)</a></li>
									<li class="divider"></li>
									<li><a href="#">Logout</a></li>
								</ul>
							</section>
						</nav>
					</div>
				</div>

				<!-- EJS GOES HERE FOR to SHOW thread -->

				<div id="show-thread" class="row">
					<% thread.forEach(function(thisThread){ %>
						<!-- Icon column  -->
						<div class="small-12 medium-1 columns">
							<img class="top-icon top-left-icon" src="http://www.polyvore.com/cgi/img-thing?.out=jpg&size=l&tid=34025608" alt="diamond" />
						</div>
						<!-- Title  -->
						<div class="small-12 medium-10 columns">
							<h1 id="show-title"><%= thisThread.title %></h1>
						</div>
						<!--  Author  -->
						<div class="small-12 medium-1 columns">
							<aside>author:
								<%= thisThread.author_id %>
							</aside>
						</div>
				</div>
				<div class="row">
					<br>
					<div class="medium-1 column">
						<p></p>
					</div>
					<div class="small-12 medium-10 columns">
							<p id="thread-content" >
								<%= thisThread.content %>
							</p>
					</div>
					<div class="medium-1 column">
						<p></p>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
		<!--  ^ closed row   -->
	</div>

	<footer>
		<div class="foot row">
			<div class="small-12 columns">
				<p>hhh</p>
			</div>
		</div>
	</footer>

	<% include bottom.ejs %>
